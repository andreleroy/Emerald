<div class="header_main_container">
  <div class="ellipsis">
    <i class="fas fa-ellipsis-v"></i>
  </div>
  <div class="header_left_container">
    <div class="header_avatar">
      <%= render 'shared/avatar' %>
    </div>
    <% if @listing.display_name.size > 15 %>
      <h4><%= @listing.display_name.first(12) %>...</h4>
    <% else %>
      <h4><%= @listing.display_name %></h4>
    <% end %>
    <% if @listing.location.size > 15 %>
      <h5><%= @listing.location.first(12) %>...</h5>
    <% else %>
      <h5><%= @listing.location %></h5>
    <% end %>
  </div>

  <div class="header_right_container">
    <div class="header_right_top_container">
      <div class="header_right_top_left_container">
        <h2>â‚¬25k</h2><h5>revenue</h5>
      </div>
      <div class="header_right_top_right_container">
        <h2>250</h2><h5>stays</h5>
      </div>
    </div>
    <div class="header_right_bottom_container">
      <div class="header_button">
        <%= link_to 'Add stories', listing_photos_path(@listing), class: 'btn btn-yellow' %>
      </div>
        <%= link_to 'View analytics', bookings_path(listing_id: @listing.id), class: 'btn btn-white' %>
    </div>
  </div>
</div>

