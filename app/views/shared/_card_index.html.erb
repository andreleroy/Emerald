<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-xs-12 col-md-3">
      <%= link_to listing_path(listing), :action => 'go' do %>
      <div class="card">
        <%= cl_image_tag listing.photos.first.content, height: '280', :gravity=>"auto", :quality => "auto", :crop=>"fill", :background=>"#000000", :effect=>"gradient_fade:22", class: "card-image overlay" %>
          <div class="card-description">
            <div class="card-description-h2"><h2 class="m-0"><%=listing.name%></h2></div>
            <div class="card-description-p"><p><%=listing.location%></p></div>
          </div>
          <div class="card-share-listing"><!--Hamburger menu--></div>
      </div>
    <% end %>
    </div>
  <% end %>
</div>

<%= render 'shared/analytics_card' %>



