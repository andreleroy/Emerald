<h1>All users:</h1>
<%= link_to "Add a new user", new_admin_user_path, :action => 'go'%>
<% if User.any? %>
  <% @users.each do |user| %>
    <div style="display: flex; justify-content: space-around, align-items: center, border: 1px solid black;">
      <%= user.first_name %>
      <%= user.last_name + " -" %>
      <%= user.email %>
      <%= link_to "Edit", edit_admin_user_path(user), :action => 'go' %>
      <%= link_to "Delete", admin_user_path(user), :method => 'delete' %>
    </div>
  <% end %>
<% end %>
